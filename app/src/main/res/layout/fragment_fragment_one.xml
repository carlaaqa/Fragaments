<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentOne">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/indicator"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_brightness_1_black_24dp" />

    <EditText
        android:id="@+id/textViewFragmentOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:text="Escribe algo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/colorOne"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/colorTwo"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_dark" />

        <Button
            android:id="@+id/colorThree"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_orange_dark" />

        <Button
            android:id="@+id/colorFour"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_dark" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonFragmentOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="PRESS ME"
        />


</LinearLayout>

